@font-face
  font-family ProximaNova
  src url('../fonts/ProximaNova.woff') format('woff')

.markdown-gitbook
  line-height 1.7
  color #333
  font-family ProximaNova

  h1, h2, h3, h4, h5, h6
    margin-bottom 0.85em
    font-weight 700

  a
    color #4183c4
    text-decoration none

  strong
    font-weight 700

  code
    font-family "Fira Mono"

  code.not-block
    font-family ProximaNova
    padding 0.2em
    margin 0
    font-size 1em
    letter-spacing 0.4px
    background-color #f7f7f7

  p
    margin-top 0
    margin-bottom 0.85em

  ol, ul
    padding 0
    margin 0
    margin-bottom 0.85em
    padding-left 2em
